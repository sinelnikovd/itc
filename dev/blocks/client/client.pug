					- for(var i=0; i < 3; i++)
						+b.client-item(data-dot="<span></span><i></i>")
							+e.desc
								+b.person
									+e.IMG.thumb(src="./media/images/person/1.jpg")
									+e.desc
										+e.name Ковель Денис
										+e.position Генеральный директор
										+e.A.link(href="#") 77volt.ru
								+e.txt
